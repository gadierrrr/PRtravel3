{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "PRTD: Start server (debug)",
      "program": "${workspaceFolder}/src/server.js",
      "envFile": "${workspaceFolder}/.env",
      "env": {
        "NODE_ENV": "development"
      },
      "cwd": "${workspaceFolder}",
      "restart": true,
      "console": "integratedTerminal",
      "runtimeArgs": [
        "--inspect"
      ],
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}
